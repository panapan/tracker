<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Обнаружено <%= pluralize_ru(object.errors.count, "ошибка", "ошибки", "ошибок") %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
